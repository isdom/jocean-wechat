<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">
        
    <!--${wechat.wpa} 
        ${wechat.appid}
        ${wechat.token}
        ${wechat.ticket}
        ${wechat.secret}
    -->

    <bean class="org.jocean.idiom.rx.RxActions"
        factory-method="doAdd"
        destroy-method="call">
        <constructor-arg ref="wxapis"/>
        <constructor-arg>
            <bean class="org.jocean.wechat.service.DefaultWechatAPI">
                <property name="maxRetryTimes" value="${wechat.retrytimes:3}"/>
                <property name="retryIntervalBase" value="${wechat.retryintervalbase:2}"/>
            </bean>
        </constructor-arg>
    </bean>
    
</beans>
