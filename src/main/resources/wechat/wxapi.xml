<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">
        
    <!-- ${wechat.appid}
        ${wechat.token}
        ${wechat.ticket}
        ${wechat.secret}
    -->

    <bean id="wxapi" class="org.jocean.wechat.service.DefaultWechatAPI">
        <property name="maxRetryTimes" value="${wechat.retrytimes:3}"/>
        <property name="retryIntervalBase" value="${wechat.retryintervalbase:2}"/>
    </bean>
    <alias name="wxapi" alias="${wechat.wpa}"/>
    
    <bean class="org.jocean.idiom.rx.RxActions"
        factory-method="doPut"
        destroy-method="call">
        <constructor-arg ref="wxs"/>
        <constructor-arg value="${wechat.wpa}"/>
        <constructor-arg ref="wxapi"/>
    </bean>
    
</beans>
